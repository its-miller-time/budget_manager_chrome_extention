{
    "manifest_version" : 2,
    "name" : "Budget Manager",
    "version" : "1.0",
    "description" : "Tracks overall spending",
    "icons" : {
        "128" : "piggy128.png",
        "48" : "piggy32.png",
        "16" : "piggy16.png"
    },
    "browser_action":{
        "default_icon" : "piggy128.png",
        "default_popup" : "budget.html"
    },
    "options_page" : "options.html",
    "background" : {
        "scripts": ["eventPage.js"],
        "persistent" : false
    },
    "permissions" : [
        "storage",
        "notifications",
        "contextMenus"
    ]
}